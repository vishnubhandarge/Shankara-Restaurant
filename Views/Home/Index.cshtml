@{
    ViewData["Title"] = "Home Page";
}
<div class="container">
    <div class="row  shadow rounded">
        <div class="col-sm-12 col-md-6 col-lg-6 col-xl-6">
            <div id="carouselExampleSlideOnly" class="carousel slide" data-bs-ride="carousel">
                <div class="carousel-inner h-100">
                    <div class="carousel-item  h-100 active">
                        <img src="/images/carouselImages/image1.jpg"
                             class="d-block w-100 h-100" alt="Receips" />
                    </div>
                    <div class="carousel-item top-100">
                        <img src="./images/carouselImages/image2.jpg"
                             class="d-block w-100 h-300" alt="Receips" />
                    </div>
                    <div class="carousel-item top-100">
                         <img src="./images/carouselImages/image3.jpeg"
                             class="d-block w-100 h-200" alt="Receips" />
                    </div>
                </div>
            </div>
        </div>
        <div class="col-sm-12 col-md-6 col-lg-6 col-xl-6">
            <div class="mb-1">
                <h2> Get The Best <span class="text-success fst-italic">Food</span> From 
                                  <span class="text-success">Best Restaurent</span></h2>
            </div>
            <div class="mb-1 p-3">
                <span <i class="fa-solid fa-seedling text-success mx-2 fs-4"></i></span>
                <span class="fs-5 text-dark fst-italic">Fresh Food</span>
            </div>
            <div class="mb-1 p-3">
                <span <i class="fa-solid fa-wheat-awn text-success mx-2 fs-4"></i></span>
                <span class="fs-5 text-dark fst-italic">Healthy Meal</span>
            </div> <div class="mb-3 p-3">
                <span <i class="fa-solid fa-motorcycle text-success mx-2 fs-4"></i></span>
                <span class="fs-5 text-dark fst-italic">Fastest Delivery</span>
                <p class="py-2">We Promise Deliver Food within 30 min.</p>
            </div>
        </div> 
    </div>
    <div class="row">
